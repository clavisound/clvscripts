#!/bin/bash
IP=$1
DATE=$(date +%Y-%m-%d)

grep $IP /var/log/maillog > ~/abuse/${IP}__${DATE}.maillog
vim ~/abuse/${IP}__${DATE}.maillog
bzip2 ~/abuse/${IP}__${DATE}.maillog
whois $IP | grep abuse

echo "echo \"IP: $IP attacks my mail server.\n\nCheck attached log for details.\n\n$IP is banned in my side for unknown time.\n\nThank you.\" | mail -s \"IP: $IP attacks server.\" -a ~/abuse/${IP}__${DATE}.maillog.bz2"

echo "iptables -A INPUT -J DROP_CLV -s $IP"

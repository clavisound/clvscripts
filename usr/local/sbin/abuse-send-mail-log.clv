#!/bin/bash
IP=$1
DATE=$(date +%Y-%m-%d)

grep $IP /var/log/maillog > ~/abuse/${IP}__${DATE}.maillog
vim ~/abuse/${IP}__${DATE}.maillog
bzip2 ~/abuse/${IP}__${DATE}.maillog
whois $IP | grep abuse

echo "echo \"This ip attacks my mail server\n\nCheck attached log for details.\n\nThank you.\" | mail -s \"IP: $IP attacks server mail.etraq.eu\" -a ~/abuse/${IP}__${DATE}.maillog.bz2"
